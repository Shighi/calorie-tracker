# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calorie_tracker
DB_USER=postgres
DB_PASSWORD=postgres
DB_DIALECT=postgres
DB_LOGGING=false

# Authentication
JWT_SECRET=your_very_long_and_secure_random_secret_key_with_at_least_64_characters_12345678901234567890
JWT_EXPIRATION=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,https://calorie-tracker-grq652sg6-shighis-projects.vercel.app

# External API Keys
USDA_API_KEY=your_usda_api_key
OPEN_FOOD_FACTS_API_KEY=your_open_food_facts_api_key

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUEST_BODY_SIZE=10mb
SECURE_HEADERS=true

# Performance
COMPRESSION_LEVEL=6
TRUST_PROXY=true

# Third-Party Services
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
FEATURE_EXTERNAL_API_INTEGRATION=true
FEATURE_ADVANCED_NUTRITION_REPORTING=true
FEATURE_REDIS_CACHING=true

# Monitoring
HEALTH_CHECK_GRACE_PERIOD=30000  # 30 seconds

# Development Helpers
DEBUG=false
VERBOSE_ERRORS=false